## General Instructions ##

docker stop $(docker ps -qa);											// Detiene todos los contenedores en ejecución
docker rm $(docker ps -qa);												// Elimina todos los contenedores detenidos
docker rmi -f $(docker images -qa);										// Elimina todas las imágenes
docker volume rm $(docker volume ls -q);								// Elimina todos los volúmenes
docker network rm $(docker network ls -q) 2>/dev/null					// Elimina todas las redes Docker

## Simple setup ##
docker ps --format "table {{.Names}}\t{{.Ports}}"						// Muestra los nombres y puertos de los contenedores en ejecución
docker exec nginx grep -E "ssl_protocols" /etc/nginx/nginx.conf			// Verificar configuración SSL en Nginx	

## Docker Network ##
docker network ls														// Listar todas las redes Docker

## Nginx with SSL/TLS ##
docker compose ps														// Verificar que contenedores están en ejecución
curl -Ik http://mpico-bu.42.fr											// Verificar que HTTP (puerto 80) NO funciona		
curl -Ik https://mpico-bu.42.fr											// Verificar que HTTPS (puerto 443) SÍ funciona

## MariaDB ##
docker exec -it mariadb mysql -uroot -p									// Acceder a MariaDB como root